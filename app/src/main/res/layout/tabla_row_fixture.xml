<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/style_borde_text">

        <ImageView
            android:id="@+id/imageEscL"
            android:contentDescription="@string/app_name"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/ligamorterensebasquet"/>

        <TextView
            android:id="@+id/colEquipoL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text=""
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="serif"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/colPtsL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text=""
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="serif"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/colEstado"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="@string/guion"
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="serif"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/colPtsV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text=""
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="serif"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/colEquipoV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text=""
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="serif"
            android:textSize="16dp" />

    <ImageView
        android:id="@+id/imageEscV"
        android:contentDescription="@string/app_name"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_weight="0.5"
        app:srcCompat="@drawable/ligamorterensebasquet"/>
    </TableRow>
